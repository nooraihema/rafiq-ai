
<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>تحويل قاعدة المعرفة</title>
  <style>
    body { font-family: Arial; padding: 20px; direction: rtl; }
    textarea { width: 100%; height: 200px; margin-top: 10px; }
  </style>
</head>
<body>
  <h2>📂 حول knowledge.txt إلى JSON</h2>
  <input type="file" id="fileInput" accept=".txt"><br><br>
  <button onclick="convert()">تحويل</button>

  <h3>📑 النتيجة (انسخها واعمل بيها knowledge.json)</h3>
  <textarea id="output" readonly></textarea>

  <script>
    function convert() {
      const fileInput = document.getElementById("fileInput");
      const output = document.getElementById("output");

      if (!fileInput.files.length) {
        alert("اختار ملف knowledge.txt الأول!");
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        const lines = e.target.result.split("\n");
        const data = {};

        lines.forEach(line => {
          if (line.includes("|")) {
            const [q, a] = line.split("|").map(s => s.trim());
            if (q && a) data[q] = a;
          }
        });

        output.value = JSON.stringify(data, null, 2);
      };
      reader.readAsText(fileInput.files[0]);
    }
  </script>
</body>
</html>
